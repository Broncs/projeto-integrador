<%- include('partials/header') %>

<h1>Clientes Cadastrados</h1>
<table class="table">
   <thead class="thead-light">
      <tr>
         <th>Nome</th>
         <th>Email</th>
         <th>Telefone</th>
         <th>Whats App</th>
         <th>Editar / Excluir</th>
      </tr>
   </thead>
   <tbody>
      <% posts.forEach((post)=>{ %>
      <form action="/deletecliente" method="post">
         <tr>
            <th scope="row"><%= post.cliente %></th>
            <td><%= post.email %></td>
            <td><%= post.telefone%></td>
            <td><%= post.whats%></td>
            <td>
               <a class="btn btn-success" href="/clientes/editar/<%=post._id%>" role="button">Editar</a>
               <button type='submit' name='delete' value='<%=post._id%>' class="btn btn-danger" href="/clientes"
                  role="button">Excluir</button>
            </td>
         </tr>

      </form>
      <% }) %>


   </tbody>
</table>



<%- include('partials/footer') %>